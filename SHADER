                Lf = "137629045445811",
                Dn = "108658380326960",
                Up = "106947104504063"
            }
        },
        {
            name = "Sky chill pink",
            previewID = "109820516263688",
            data = {
                Bk = "85145014734275",
                Ft = "93060769119066",
                Rt = "85016324558021",
                Lf = "109820516263688",
                Dn = "79534569812811",
                Up = "120341090307363"
            }
        },
        {
            name = "Sky Cyan Universe",
            previewID = "84831457884375",
            data = {
                Bk = "84831457884375",
                Ft = "90342294684060",
                Rt = "138094425159347",
                Lf = "111796915886850",
                Dn = "100999806411205",
                Up = "92658150243108"
            }
        },
        {
            name = "Sky Celestial Veil",
            previewID = "76351826483278",
            data = {
                Bk = "128420935675272",
                Ft = "76351826483278",
                Rt = "110225564782101",
                Lf = "121387836893123",
                Dn = "76165719344415",
                Up = "82889410751072"
            }
        },
        {
            name = "Sky orange",
            previewID = "135402457469361",
            data = {
                Bk = "88191526328266",
                Ft = "78909022394404",
                Rt = "77865348044679",
                Lf = "135402457469361",
                Dn = "74826617274255",
                Up = "102055434906962"
            }
        },
        {
            name = "Sky light blue",
            previewID = "82889140435572",
            data = {
                Bk = "134623369780082",
                Ft = "137329641870411",
                Rt = "82889140435572",
                Lf = "105609935522672",
                Dn = "80361047456730",
                Up = "100390713086988"
            }
        },
        {
            name = "Sky good night",
            previewID = "137665351899896",
            data = {
                Bk = "137665351899896",
                Ft = "82375238526841",
                Rt = "100253220273309",
                Lf = "139382907161371",
                Dn = "80361047456730",
                Up = "80862786502848"
            }
        },
        {
            name = "Sky spooky",
            previewID = "113451629872206",
            data = {
                Bk = "123097528795128",
                Ft = "113451629872206",
                Rt = "129122572935526",
                Lf = "73930884865381",
                Dn = "139909512211310",
                Up = "131264913847172"
            }
        }
    }

    -- T·∫°o n√∫t cho t·ª´ng Skybox
    for i, skybox in ipairs(skyboxes) do
        createSkyboxButton(skybox.name, skybox.previewID, skybox.data, i)
    end


        player.CharacterAdded:Connect(function()
            task.wait(1)
            cleanupShader()
            applyShader()
        end)
    end

    initializeShader()
    applyShader()
    print("Shader ƒë√£ ƒë∆∞·ª£c √°p d·ª•ng th√†nh c√¥ng!")
end)

-- ƒê·∫£m b·∫£o m√†n h√¨nh loading lu√¥n che ph·ªß cho ƒë·∫øn khi fade-out k·∫øt th√∫c
task.wait(loadingTime) -- ƒê·ª£i h·∫øt th·ªùi gian loading
TweenService:Create(blackScreen, TweenInfo.new(2), {BackgroundTransparency = 1}):Play() -- Fade-out m√†n h√¨nh loading trong 2 gi√¢y

task.wait(2) -- ƒê·ª£i hi·ªáu ·ª©ng fade-out ho√†n t·∫•t
screenGui:Destroy() -- X√≥a m√†n h√¨nh loading
